<h1>Your colour palette</h1>


<%= image_tag @canva.image.url(:medium) %>

<div class="palette">
  <canvas id="canvas_1" width="50" height="50" style="background-color: <%= @color[0] %>;border-radius:50%;"></canvas>
  <canvas id="canvas_2" width="50" height="50" style="background-color: <%= @color[1] %>;border-radius:50%;"></canvas>
  <canvas id="canvas_3" width="50" height="50" style="background-color: <%= @color[2] %>;border-radius:50%;"></canvas>
  <canvas id="canvas_4" width="50" height="50" style="background-color: <%= @color[3] %>;border-radius:50%;"></canvas>
  <canvas id="canvas_5" width="50" height="50" style="background-color: <%= @color[4] %>;border-radius:50%;"></canvas>
  <canvas id="canvas_6" width="50" height="50" style="background-color: <%= @color[5] %>;border-radius:50%;"></canvas>
<div>

  <form action = "<%=new_canva_path%>" method = 'get'>
    <input type="hidden" name="room_choice" value="<%= @svg %>">
    <input type ="submit" value = "Try again">
  </form>

<form action= "<%=canva_paint_path(@canva, room_choice: @svg)%> "method="post">
  <input type="hidden" name="room_choice" value="<%= @svg %>">
  <input type ="submit" value = "Continue">
</form>
